{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "gcc",
      "args": [
        "-g", // Include debug symbols
        "${workspaceFolder}/inheritance/${fileBasename}", // Source file(s)
